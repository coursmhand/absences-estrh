{% extends "layout.twig" %}

{% block body %}
    <div class="" style="width: 100%;">
        <img src="{{ classe.image }}" width="300" height="300" class="card-img-top" alt="{{classe.nomclasse}}">
        <div class="card-body">
            <h5 class="card-title">{{classe.nomclasse}}</h5>
            <hr>
            <h5 class="card-title">{{classe.niveau}}</h5>
            <h5 class="card-title">{{classe.filliere}}</h5>
            <h5 class="card-title">{{classe.categorie}}</h5>
            <p class="card-text">Classes de l'ESTIAM </p>
            <a href="/" class="btn btn-success">Retour</a>
        </div>
    </div>    
{% endblock %}